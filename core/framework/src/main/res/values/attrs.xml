<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HeadlineView">
        <attr name="headline" format="string" />
        <attr name="headlineTextSize" format="dimension" />
        <attr name="headlineTextColor" format="color" />
        <attr name="headlineMaxLines" format="integer" />
        <attr name="headlineMinLines" format="integer" />
        <attr name="headlineEllipsize" format="enum">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>

        <attr name="detail" format="string" />
        <attr name="detailTextSize" format="dimension" />
        <attr name="detailTextColor" format="color" />
        <attr name="detailMaxLines" format="integer" />
        <attr name="detailMinLines" format="integer" />
        <attr name="detailEllipsize" format="enum">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>
    </declare-styleable>
</resources>