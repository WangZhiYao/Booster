<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextLabelView">
        <attr name="title" format="string" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleMaxLines" format="integer" />
        <attr name="titleMinLines" format="integer" />
        <attr name="titleEllipsize" format="enum">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>

        <attr name="content" format="string" />
        <attr name="contentTextSize" format="dimension" />
        <attr name="contentTextColor" format="color" />
        <attr name="contentMaxLines" format="integer" />
        <attr name="contentMinLines" format="integer" />
        <attr name="contentEllipsize" format="enum">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>
    </declare-styleable>
</resources>